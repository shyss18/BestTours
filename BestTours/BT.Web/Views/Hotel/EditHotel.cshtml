@model BT.Dom.Entities.Hotel

@{
    ViewBag.Title = "Редактирование отеля " + Model.Name;
}

<div class="container" align="center">
    <div class="col-md-5">
        <h4 class="text-center text-warning" style="padding-top: 10%">Редактирование отеля</h4>
        @using (Html.BeginForm("EditHotel", "Hotel", FormMethod.Post, new { @class = "form-group" }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.TextBoxFor(model => model.Name, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Name),
                })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.TextBoxFor(model => model.Address, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Address),
                })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.TextBoxFor(model => model.Phone, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Phone),
                })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
            <div class="container">
                <input type="submit" class="btn btn-outline-warning" value="Изменить" />
                <a href="~/Hotel/AllHotels" class="btn btn-outline-secondary">Отмена</a>
            </div>
        }
    </div>
</div>

