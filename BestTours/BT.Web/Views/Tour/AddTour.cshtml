@model BT.Dom.Entities.Tour

@{
    ViewBag.Title = "Добавить тур";
    ViewBag.Favicon = "/Content/icons/add/favicon.ico";
}

<div class="container">
    @using (Html.BeginForm("AddTour", "Tour", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, "Название тура", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Destination, "Путь назначения", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Destination, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Price, "Цена", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Date, "Дата отправления", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, "Описание", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-success col-sm-2 col-md-2" value="Добавить" />
            <a href="~/Home/Index" class="btn btn-outline-secondary col-sm-2 col-md-2">Отмена</a>
        </div>
    }
</div>

