@model BT.Dom.Entities.Tour

@{
    ViewBag.Title = "Изменить тур";
    ViewBag.Favicon = "/Content/icons/editTour/favicon.ico";
}

<div class="container" align="center">
    <div class="col-md-5">
        <h4 class="text-center text-warning" style="padding-top: 10%">Редактирование тура</h4>
        @using (Html.BeginForm("EditTour", "Tour", FormMethod.Post, new { @class = "form-group" }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.TextBoxFor(model => model.Name, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Name),
                })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.TextBoxFor(model => model.Destination, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Destination),
                })
                @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.TextBoxFor(model => model.Price, new
                {
                    @class = "form-control",
                    @type = "number",
                    @placeholder = Html.DisplayNameFor(model => model.Price),
                })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @{Html.EnableClientValidation(false);}
                @Html.TextBoxFor(model => model.Date, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Date),
                })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                @{Html.EnableClientValidation(true);}
            </div>
            <div class="form-group row">
                @Html.TextAreaFor(model => model.Description, new
                {
                    @class = "form-control",
                    @placeholder = Html.DisplayNameFor(model => model.Description),
                })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="container">
                <input type="submit" class="btn btn-outline-warning" value="Изменить" />
                <a href="~/Tour/Index" class="btn btn-outline-secondary">Отмена</a>
            </div>
        }
    </div>
</div>
