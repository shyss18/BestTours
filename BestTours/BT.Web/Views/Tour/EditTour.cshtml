@model BT.Dom.Entities.Tour

@{
    ViewBag.Title = "Изменить тур";
    ViewBag.Favicon = "/Content/icons/editTour/favicon.ico";
}

<div class="container">
    @using (Html.BeginForm("EditTour", "Tour", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, "Название тура", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Destination, "Путь назначения", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Destination, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Price, "Цена", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Date, "Дата отправления", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, "Описание", new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-warning col-sm-2 col-md-2" value="Изменить" />
            <a href="~/Tour/Index" class="btn btn-outline-secondary col-sm-2 col-md-2">Отмена</a>
        </div>
    }
</div>

